<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/navigation_bar_height"
    tools:context=".ui.dashboard.DashboardFragment">

    <EditText
        android:id="@+id/searchField"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/searchHint"
        android:inputType="textPersonName"
        android:textColor="@color/TextColorDark"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchField">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/filter_by_program"
            android:textColor="@color/TextColorDark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ToggleButton
            android:id="@+id/toggleIt"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/IT"
            android:textOff="@string/IT"
            android:textOn="@string/IT"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/toggleD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ToggleButton
            android:id="@+id/toggleSummer"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="@string/SummerJob"
            android:textOff="@string/SummerJob"
            android:textOn="@string/SummerJob"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/toggleEmployment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <ToggleButton
            android:id="@+id/toggleD"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="@string/CS"
            android:textOff="@string/CS"
            android:textOn="@string/CS"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/filter_by_offers"
            android:textColor="@color/TextColorDark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toggleIt" />

        <ToggleButton
            android:id="@+id/toggleEmployment"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="@string/Employment"
            android:textOff="@string/Employment"
            android:textOn="@string/Employment"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>

        <ToggleButton
            android:id="@+id/toggleE"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="@string/Elektro"
            android:textOff="@string/Elektro"
            android:textOn="@string/Elektro"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toggleD"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ToggleButton
            android:id="@+id/toggleMaster"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="@string/MasterThesis"
            android:textOff="@string/MasterThesis"
            android:textOn="@string/MasterThesis"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toggleEmployment"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="0.0">

        <ListView
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/navigation_bar_height"
            android:divider="#000"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false">

        </ListView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>